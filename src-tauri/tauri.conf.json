{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "efficiency-tools",
  "version": "0.1.0",
  "identifier": "com.mochen.efficiency.tools",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:8000",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "efficiency-tools",
        "width": 600,
        "height": 400
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
